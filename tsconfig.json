{
  "compilerOptions": {

    /**
    * a dot means directory from tsconfig.json-directory
    */
    "baseUrl":".", 

    /**
    * module resolution
    */                                
    "paths":{
      "app/*":["src/app/*"],
      "services/*":["src/services/*"]
    },
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts"
  ]
}
